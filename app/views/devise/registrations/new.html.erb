<div class="devise-container">
  <div class="devise-form">
    <h2>Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field-inline">
        <div class="field half-width">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, required: true, class: 'form-control' %>
        </div>

        <div class="field half-width">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, required: true, class: 'form-control' %>
        </div>
      </div>

      <div class="field-inline">
        <div class="field half-width">
          <%= f.label :age %>
          <%= f.number_field :age, class: 'form-control' %>
        </div>

        <div class="field half-width">
          <%= f.label :profile_picture %>
          <%= f.file_field :profile_picture, accept: 'image/*', class: 'form-control' %>
        </div>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", required: true, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", required: true, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= link_to "Log in", new_user_session_path %> |
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>
